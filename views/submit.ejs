<%- include('partials/header') %>

<div class="h-screen w-full flex justify-center items-center bg-green-100 px-10">
	<div class="max-w-xl mx-auto bg-white p-10 rounded shadow">
		<h2 class="text-2xl font-bold mb-4">Submit a Testimonial</h2>

		<% if (typeof error !== 'undefined') { %>
			<div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4"><%= error %></div>
		<% } %>

		<form action="/submit" method="POST" class="space-y-4">
			<div>
				<label class="block font-semibold">Your Name:</label>
				<input type="text" id="name" name="name" required="required" minlength="2" maxlength="50" class="w-full border p-2 rounded"/>
			</div>

			<div>
				<label class="block font-semibold">Your Message:</label>
				<textarea id="message" name="message" required="required" minlength="5" maxlength="500" class="w-full border p-2 rounded"></textarea>
			</div>

			<a href="/" class="bg-gray-400 text-white px-4 py-2 rounded hover:bg-gray-500 transition">Cancel</a>
			<button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
				Submit
			</button>
		</form>
	</div>
</div>
