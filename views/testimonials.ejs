<%- include('partials/header') %>

<div class="container mx-auto px-10 py-6 mt-20">
	<div class="flex justify-between items-center mb-4">
		<h1 class="text-2xl font-semibold">Testimonials</h1>
		<a href="/submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
			+ Add Feedback
		</a>
	</div>

	<% if (testimonials.length > 0) { %>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<% testimonials.forEach(t => { %>
				<div class="p-4 bg-white border rounded shadow">
					<h2 class="text-lg font-medium"><%= t.name %></h2>
					<p class="text-gray-700"><%= t.message %></p>
					<a href="/testimonial/<%= t._id %>" class="text-blue-500 hover:underline text-sm">View</a>
				</div>
			<% }) %>
		</div>
	<% } else { %>
		<p>No testimonials yet.</p>
	<% } %>
</div>
